<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Universite_adi"
        android:drawableLeft="@drawable/ic_school_black_24dp"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/Sehir_adi"
        android:drawableLeft="@drawable/ic_menu_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/Taban_puan"
        android:drawableLeft="@drawable/ic_equalizer_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="20dp"/>

</LinearLayout>